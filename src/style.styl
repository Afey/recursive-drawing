spacing = 16px
sidebar = 100px


body
  // background-color: #ccc
  background-image: url("images/bgnoise.gif")


body
  overflow: hidden
  font: 13px "Optima", "Helvetica", "Arial", sans-serif
  background-color: #ddd



#workspace
  position: absolute
  top: spacing
  left: spacing*2 + sidebar
  right: spacing
  bottom: spacing
  overflow: hidden
  outline: 1px solid #777
  background-color: #fff
  box-shadow: 0px 0px 5px #888;


#sidebar
  position: absolute;
  top: spacing
  left: spacing
  bottom: spacing
  width: sidebar
  
  #definitions
    canvas
      margin-bottom: spacing
      outline: 1px solid #777
      background-color: #fff
      box-shadow: 0px 0px 5px #888;
      &.focused
        outline: 1px solid #000
  
  #addDefinition
    width: 36px
    height: 36px
    font-size: 30px
    color: #999
    text-align: center
    margin: 0px auto
    background-color: #fff
    border-radius: 6px
    box-shadow: 0px 0px 5px #888;